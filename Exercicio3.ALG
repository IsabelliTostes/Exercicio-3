algoritmo "salario"
// Seção de Declarações
var sal:real
nome: caracter

inicio
// Seção de Comandos
    escreva("Digite o nome do funcionário: ")
   leia (nome)
   
   escreva("Digite o salario do funcionário: R$ ")
   leia (sal)
   
escreval("  Funcionário ", nome, sal , " recebe em junho"  )
   leia (sal)
fimalgoritmo
